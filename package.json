  "config": {
    "files_js": "./src/**/*.{js,vue}",
    "files_style": "./src/**/*.{scss,vue}"
  },
  "scripts": {
    "start": "webpack-dev-server --mode development --open",
    "build:dev": "cross-env NODE_ENV=development webpack --mode development",
    "build:prod": "cross-env NODE_ENV=production webpack --mode production",
    "eslint": "./node_modules/.bin/eslint $npm_package_config_files_js",
    "eslint:fix": "./node_modules/.bin/eslint $npm_package_config_files_js --fix",
    "stylelint": "./node_modules/.bin/stylelint $npm_package_config_files_style",
    "stylelint:fix": "./node_modules/.bin/stylelint $npm_package_config_files_style --fix",
    "lint": "./node_modules/.bin/run-s eslint stylelint",
    "lint:fix": "./node_modules/.bin/run-s eslint:fix stylelint:fix"
  },
  "devDependencies": {
    "@babel/core": "^7.4.3",
    "@babel/preset-env": "^7.4.3",
