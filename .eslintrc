{
  "root": true,
  "parserOptions": {
    "parser": "babel-eslint"
  },
  "env": {
    "browser": true
  },
  "extends": ["plugin:vue/recommended", "plugin:prettier/recommended", "standard"],
  "plugins": ["vue"],
  "rules": {
    "generator-star-spacing": "off",
    "semi": ["error", "always"],
    "comma-dangle": ["error", "always-multiline"]
  }
}
